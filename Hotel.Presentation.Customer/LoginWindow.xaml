<Window x:Class="Hotel.Presentation.Customer.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel.Presentation.Customer"
        mc:Ignorable="d"
        Title="LoginWindow" Height="80" Width="250">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button x:Name="CustomerBtn" Click="CustomerClick" Content="Customers Login" Margin="5" Grid.Column="0" Height="30"></Button>
        <Button x:Name="OrganisatorBtn" Click="OrganisatorClick" Content="Organisators Login" Margin="5" Grid.Column="1" Height="30"></Button>
            
        </Grid>

    </Grid>
</Window>
